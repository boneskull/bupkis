{
  "name": "@bupkis/codemod",
  "version": "0.0.0",
  "type": "module",
  "description": "Migrate Jest assertions to bupkis",
  "engines": {
    "node": "^20.19.0 || ^22.12.0 || >=23"
  },
  "bin": {
    "bupkis-codemod": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "bupkis",
    "jest",
    "codemod",
    "migration",
    "assertions"
  ],
  "scripts": {
    "build": "tsc",
    "example:codemod": "npx tsx src/cli.ts --dry-run examples/jest-example.test.ts",
    "example:jest": "NODE_OPTIONS='--experimental-vm-modules' npx jest --config examples/jest.config.js",
    "test": "node --no-warnings --test --experimental-strip-types 'test/**/*.test.ts'",
    "test:dev": "node --no-warnings --test --watch --experimental-strip-types 'test/**/*.test.ts'"
  },
  "dependencies": {
    "@boneskull/bargs": "^3.0.0",
    "bupkis": "0.14.0",
    "picocolors": "^1.1.1",
    "ts-morph": "^25.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/node": "^24.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.0"
  }
}

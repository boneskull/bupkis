{
  "name": "@bupkis/codemod",
  "version": "0.0.0",
  "type": "module",
  "description": "Migrate Jest assertions to bupkis",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/boneskull/bupkis.git",
    "directory": "packages/codemod"
  },
  "homepage": "https://bupkis.zip",
  "author": {
    "name": "Christopher Hiller",
    "email": "boneskull@boneskull.com"
  },
  "license": "BlueOak-1.0.0",
  "engines": {
    "node": "^20.19.0 || ^22.12.0 || >=23"
  },
  "bin": {
    "bupkis-codemod": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "CHANGELOG.md",
    "dist",
    "src"
  ],
  "keywords": [
    "bupkis",
    "jest",
    "codemod",
    "migration",
    "assertions",
    "vitest"
  ],
  "scripts": {
    "build": "tsc",
    "example:codemod": "npx tsx src/cli.ts --dry-run examples/jest-example.test.ts",
    "example:jest": "NODE_OPTIONS='--experimental-vm-modules' npx jest --config examples/jest.config.js",
    "test": "node --test --test-reporter=spec --import tsx 'test/**/*.test.ts'",
    "test:dev": "node --test --test-reporter=spec --watch --import tsx 'test/**/*.test.ts'"
  },
  "dependencies": {
    "@boneskull/bargs": "4.0.0",
    "bupkis": "0.15.0",
    "ts-morph": "^25.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.0"
  }
}

{
  "name": "bupkis-monorepo",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": "^20.19.0 || ^22.12.0 || >=23"
  },
  "scripts": {
    "bench": "npm run bench --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "docs:build": "npm run docs:build --workspace=bupkis",
    "docs:dev": "npm run docs:dev --workspace=bupkis",
    "fix": "run-s -sl fix:*",
    "fix:eslint": "eslint --fix .",
    "fix:format": "prettier --write . && markdownlint-cli2 --fix \"**/*.md\"",
    "fix:pkg": "npm pkg fix",
    "lint": "run-p -sl --aggregate-output lint:eslint lint:types lint:knip lint:markdown lint:spelling",
    "lint:commit": "commitlint",
    "lint:eslint": "eslint .",
    "lint:knip": "knip",
    "lint:markdown": "markdownlint-cli2 \"**/*.md\"",
    "lint:spelling": "cspell .",
    "lint:staged": "lint-staged",
    "lint:types": "tsc --noEmit",
    "lint:types:dev": "tsc --noEmit --watch",
    "prepare": "husky; npm run build",
    "test": "npm run test --workspaces",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "test:dev": "npm run test:dev --workspaces --if-present",
    "test:fuzz": "npm run test:fuzz --workspace=bupkis",
    "test:node20": "npm run test:node20 --workspaces",
    "test:property": "npm run test:property --workspaces --if-present",
    "test:snapshots": "npm run test:snapshots --workspaces --if-present",
    "test:types": "npm run test:types --workspaces --if-present"
  },
  "devDependencies": {
    "@commitlint/cli": "20.2.0",
    "@commitlint/config-conventional": "20.2.0",
    "@eslint/js": "9.39.2",
    "@stylistic/eslint-plugin": "5.6.1",
    "@types/node": "24.10.4",
    "@types/slug": "5.0.9",
    "@types/wallabyjs": "0.0.15",
    "@typescript-eslint/typescript-estree": "8.50.1",
    "@typescript-eslint/utils": "8.50.1",
    "bupkis": "0.15.0",
    "c8": "10.1.3",
    "cspell": "9.4.0",
    "escape-string-regexp": "5.0.0",
    "eslint": "9.39.2",
    "eslint-plugin-jsonc": "2.21.0",
    "eslint-plugin-perfectionist": "5.1.0",
    "fast-check": "4.5.2",
    "globals": "16.5.0",
    "husky": "9.1.7",
    "knip": "5.78.0",
    "lint-staged": "16.2.7",
    "markdownlint-cli2": "0.20.0",
    "markdownlint-cli2-formatter-pretty": "0.0.9",
    "modestbench": "0.9.0",
    "npm-run-all2": "8.0.4",
    "prettier": "3.7.4",
    "prettier-plugin-jsdoc": "1.8.0",
    "prettier-plugin-pkg": "0.21.2",
    "prettier-plugin-sort-json": "4.1.1",
    "serve": "14.2.5",
    "tsd": "0.33.0",
    "tsx": "4.21.0",
    "typedoc": "0.28.15",
    "typedoc-plugin-dt-links": "2.0.34",
    "typedoc-plugin-extras": "4.0.1",
    "typedoc-plugin-mdn-links": "5.0.10",
    "typedoc-plugin-redirect": "1.2.1",
    "typedoc-plugin-zod": "1.4.3",
    "typescript": "5.9.3",
    "typescript-eslint": "8.50.1",
    "valibot": "1.2.0",
    "zshy": "0.6.0"
  },
  "knip": {
    "ignore": [
      ".wallaby.js",
      "**/*.cts",
      "**/*.d.ts",
      "site/media/**/*",
      ".worktrees/**/*",
      "**/test-d/**/*.test-d.ts",
      ".claude/**/*.ts"
    ],
    "ignoreDependencies": [
      "@types/wallabyjs",
      "markdownlint-cli2-formatter-pretty",
      "bupkis"
    ],
    "node": {
      "entry": [
        ".config/typedoc-plugin-bupkis.js",
        "**/scripts/*.js",
        "**/scripts/*.ts",
        "**/test/**/*.test.ts",
        "packages/bupkis/src/assertion/index.ts",
        "packages/bupkis/src/index.ts",
        "packages/bupkis/src/types.ts",
        "packages/bupkis/src/util.ts",
        "packages/bupkis/src/schema.ts",
        "packages/bupkis/src/guards.ts",
        "packages/bupkis/src/diff.ts",
        "packages/bupkis/src/snapshot/index.ts",
        "packages/bupkis/test-data/index.ts",
        "packages/bupkis/bench/**/*.bench.ts"
      ]
    },
    "tags": [
      "-knipignore"
    ]
  },
  "lint-staged": {
    "**/!(.github/prompts)/*.md": [
      "prettier --write",
      "cspell lint --no-must-find-files"
    ],
    "**/!(package-lock).json": [
      "eslint --fix",
      "prettier --write",
      "cspell lint --no-must-find-files"
    ],
    "*.{ts,cts,js,cjs,yml,json5}": [
      "eslint --fix",
      "prettier --write",
      "cspell lint --no-must-find-files"
    ]
  },
  "prettier": {
    "jsdocCommentLineStrategy": "keep",
    "jsdocPreferCodeFences": true,
    "plugins": [
      "prettier-plugin-jsdoc",
      "prettier-plugin-pkg",
      "prettier-plugin-sort-json"
    ],
    "singleQuote": true,
    "tsdoc": true
  }
}

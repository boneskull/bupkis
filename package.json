{
  "name": "bupkis",
  "version": "0.10.5",
  "type": "module",
  "description": "Uncommonly extensible assertions for the beautiful people",
  "repository": {
    "url": "git+https://github.com/boneskull/bupkis.git"
  },
  "homepage": "https://bupkis.zip",
  "author": {
    "name": "Christopher Hiller",
    "email": "boneskull@boneskull.com"
  },
  "license": "BlueOak-1.0.0",
  "engines": {
    "node": "^20.19.0 || ^22.12.0 || >=23"
  },
  "main": "./dist/commonjs/index.js",
  "types": "./dist/commonjs/index.d.ts",
  "module": "./dist/esm/index.js",
  "exports": {
    "./package.json": "./package.json",
    "./types": {
      "import": {
        "types": "./dist/esm/types.d.ts",
        "default": "./dist/esm/types.js"
      },
      "require": {
        "types": "./dist/commonjs/types.d.ts",
        "default": "./dist/commonjs/types.js"
      }
    },
    "./util": {
      "import": {
        "types": "./dist/esm/util.d.ts",
        "default": "./dist/esm/util.js"
      },
      "require": {
        "types": "./dist/commonjs/util.d.ts",
        "default": "./dist/commonjs/util.js"
      }
    },
    "./schema": {
      "import": {
        "types": "./dist/esm/schema.d.ts",
        "default": "./dist/esm/schema.js"
      },
      "require": {
        "types": "./dist/commonjs/schema.d.ts",
        "default": "./dist/commonjs/schema.js"
      }
    },
    "./guards": {
      "import": {
        "types": "./dist/esm/guards.d.ts",
        "default": "./dist/esm/guards.js"
      },
      "require": {
        "types": "./dist/commonjs/guards.d.ts",
        "default": "./dist/commonjs/guards.js"
      }
    },
    "./assertions": {
      "import": {
        "types": "./dist/esm/assertion/index.d.ts",
        "default": "./dist/esm/assertion/index.js"
      },
      "require": {
        "types": "./dist/commonjs/assertion/index.d.ts",
        "default": "./dist/commonjs/assertion/index.js"
      }
    },
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/commonjs/index.d.ts",
        "default": "./dist/commonjs/index.js"
      }
    },
    "./diff": {
      "import": {
        "types": "./dist/esm/diff.d.ts",
        "default": "./dist/esm/diff.js"
      },
      "require": {
        "types": "./dist/commonjs/diff.d.ts",
        "default": "./dist/commonjs/diff.js"
      }
    }
  },
  "files": [
    "CHANGELOG.md",
    "dist",
    "src"
  ],
  "keywords": [
    "test",
    "expect",
    "assert",
    "assertion",
    "expectation",
    "assertion library",
    "assertions",
    "zod",
    "validation",
    "testing",
    "jest",
    "mocha",
    "chai",
    "vitest",
    "ava",
    "tap",
    "tape"
  ],
  "scripts": {
    "build": "tshy",
    "build:dev": "tshy --watch",
    "debug:assertion-ids": "tsx scripts/dump-assertion-ids.ts",
    "docs:build": "typedoc --cleanOutputDir --treatWarningsAsErrors",
    "docs:dev": "run-p \"docs:build -- --watch\" docs:serve",
    "docs:serve": "serve docs",
    "lint": "run-p lint:eslint lint:types lint:knip lint:markdown lint:spelling",
    "lint:commit": "commitlint",
    "lint:eslint": "eslint .",
    "lint:fix": "run-s \"lint:eslint -- --fix\"",
    "lint:knip": "knip",
    "lint:markdown": "markdownlint-cli2 \"**/*.md\"",
    "lint:spelling": "cspell .",
    "lint:staged": "lint-staged",
    "lint:types": "tsc -p .config/tsconfig.eslint.json",
    "lint:types:dev": "run-s \"lint:types -- --watch\"",
    "prepare": "husky; run-s build",
    "test": "run-s \"test:base -- \\\"test/**/*.test.ts\\\"\"",
    "test:base": "node --test --test-reporter=spec --import tsx",
    "test:coverage": "c8 --reporter=lcov --reporter=text npm test",
    "test:dev": "run-s \"test:base -- --watch \\\"test/**/*.test.ts\\\"\"",
    "test:profile": "run-s \"test:base -- --cpu-prof --cpu-prof-dir=.profiles  \\\"test/**/*.test.ts\\\"\"",
    "test:property": "run-s \"test:base -- \\\"test/property/*.test.ts\\\"\"",
    "test:property:dev": "run-s \"test:base -- --watch \\\"test/property/*.test.ts\\\"\"",
    "test:snapshots": "run-s \"test:base -- --test-name-pattern=\\\"<snapshot>\\\" \\\"test/**/*.test.ts\\\"\"",
    "test:update-snapshots": "run-s \"test:base -- --test-update-snapshots --test-name-pattern=\\\"<snapshot>\\\" \\\"test/**/*.test.ts\\\"\""
  },
  "peerDependencies": {
    "zod": "^4.1.5"
  },
  "dependencies": {
    "debug": "^4.4.1",
    "jest-diff": "30.2.0",
    "set.prototype.difference": "^1.1.7",
    "set.prototype.intersection": "^1.1.7",
    "set.prototype.isdisjointfrom": "^1.1.5",
    "set.prototype.issubsetof": "^1.1.4",
    "set.prototype.issupersetof": "^1.1.3",
    "set.prototype.symmetricdifference": "^1.1.3",
    "set.prototype.union": "^1.1.3",
    "slug": "^11.0.0"
  },
  "optionalDependencies": {
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@eslint/js": "9.36.0",
    "@stylistic/eslint-plugin": "5.4.0",
    "@types/node": "24.6.2",
    "@types/slug": "5.0.9",
    "@types/wallabyjs": "0.0.15",
    "@typescript-eslint/typescript-estree": "8.45.0",
    "@typescript-eslint/utils": "8.45.0",
    "c8": "10.1.3",
    "cspell": "9.2.1",
    "escape-string-regexp": "5.0.0",
    "eslint": "9.36.0",
    "eslint-plugin-jsonc": "2.20.1",
    "eslint-plugin-perfectionist": "4.15.0",
    "expect-type": "1.2.2",
    "fast-check": "4.3.0",
    "globals": "16.4.0",
    "husky": "9.1.7",
    "knip": "5.64.1",
    "lint-staged": "16.2.3",
    "markdownlint-cli2": "0.18.1",
    "markdownlint-cli2-formatter-pretty": "0.0.8",
    "npm-run-all2": "8.0.4",
    "prettier": "3.6.2",
    "prettier-plugin-jsdoc": "1.3.3",
    "prettier-plugin-pkg": "0.21.2",
    "prettier-plugin-sort-json": "4.1.1",
    "serve": "14.2.5",
    "tshy": "3.0.3",
    "tsx": "4.20.6",
    "type-fest": "4.41.0",
    "typedoc": "0.28.13",
    "typedoc-plugin-dt-links": "2.0.21",
    "typedoc-plugin-extras": "4.0.1",
    "typedoc-plugin-mdn-links": "5.0.9",
    "typedoc-plugin-redirect": "1.2.0",
    "typedoc-plugin-zod": "1.4.2",
    "typescript": "5.9.3",
    "typescript-eslint": "8.45.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "knip": {
    "ignoreDependencies": [
      "@types/wallabyjs",
      "markdownlint-cli2-formatter-pretty",
      "typedoc-plugin-dt-links"
    ],
    "ignore": [
      ".wallaby.js",
      "**/*.cts",
      "**/*.d.ts",
      "site/media/**/*"
    ],
    "tags": [
      "-knipignore"
    ],
    "node": {
      "entry": [
        ".config/typedoc-plugin-bupkis.js",
        "scripts/*.js",
        "scripts/*.ts",
        "test/**/*.test.ts",
        "test/types.types-test.ts",
        "src/assertion/index.ts",
        "src/index.ts",
        "src/types.ts",
        "src/util.ts",
        "src/schema.ts",
        "src/guards.ts",
        "src/diff.ts"
      ]
    }
  },
  "lint-staged": {
    "*.{ts,cts,js,cjs,yml,json5}": [
      "eslint --fix",
      "prettier --write",
      "cspell"
    ],
    "**/!(package-lock).json": [
      "eslint --fix",
      "prettier --write",
      "cspell"
    ],
    "**/!(.github/prompts)/*.md": [
      "prettier --write",
      "cspell"
    ]
  },
  "prettier": {
    "jsdocCommentLineStrategy": "keep",
    "jsdocPreferCodeFences": true,
    "plugins": [
      "prettier-plugin-jsdoc",
      "prettier-plugin-pkg",
      "prettier-plugin-sort-json"
    ],
    "singleQuote": true,
    "tsdoc": true
  },
  "tshy": {
    "exports": {
      "./package.json": "./package.json",
      "./types": "./src/types.ts",
      "./util": "./src/util.ts",
      "./schema": "./src/schema.ts",
      "./guards": "./src/guards.ts",
      "./assertions": "./src/assertion/index.ts",
      ".": "./src/index.ts",
      "./diff": "./src/diff.ts"
    }
  }
}

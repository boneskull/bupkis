{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["ES2023"],
    "module": "nodenext",
    "moduleDetection": "force",
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,
    "noUncheckedSideEffectImports": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "stripInternal": true,
    "target": "esnext",
    "types": ["node"],
    "verbatimModuleSyntax": false
  },
  "exclude": ["../test/**/*.snap.cjs"],
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "test-data/**/*.ts",
    "bench/**/*.ts",
    ".wallaby.js",
    "eslint.config.js",
    ".commitlintrc.js",
    ".config/typedoc*.js",
    "scripts/*",
    "eslint-rules/*.js",
    ".claude/skills/**/*.js"
  ]
}

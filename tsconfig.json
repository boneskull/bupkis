{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["ES2023"],
    "module": "nodenext",
    "moduleDetection": "force",
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,
    "noUncheckedSideEffectImports": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "stripInternal": true,
    "target": "esnext",
    "types": ["node"],
    "verbatimModuleSyntax": false
  },
  "include": [
    ".wallaby.js",
    "eslint.config.js",
    ".commitlintrc.js",
    ".config/typedoc*.js",
    ".config/eslint-rules/*.js",
    ".claude/skills/**/*.js",
    "packages/*/src/**/*.ts",
    "packages/*/test/**/*.ts",
    "packages/*/test-d/**/*.ts",
    "packages/*/test-data/**/*.ts",
    "packages/*/bench/**/*.ts",
    "packages/*/scripts/**/*.ts"
  ],
  "exclude": [
    "packages/**/dist",
    "packages/**/.tshy-build",
    "packages/**/node_modules",
    "**/test/**/*.snap.cjs"
  ],
  "references": [
    { "path": "packages/bupkis" }
  ]
}
